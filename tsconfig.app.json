{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"moduleDetection": "force",
		"useDefineForClassFields": true,
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.tsx",
		"src/**/*.jsx"
	]
}
