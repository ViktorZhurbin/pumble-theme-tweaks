{
	"name": "pumble-theme-tweaks",
	"description": "Change Pumble colors in web browser.",
	"private": true,
	"version": "2.2.3",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"format": "biome format --write",
		"postinstall": "wxt prepare",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.17",
		"colord": "^2.9.3",
		"daisyui": "^5.5.8",
		"solid-js": "^1.9.10",
		"tailwindcss": "^4.1.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@solidjs/testing-library": "^0.8.10",
		"@webext-core/fake-browser": "^1.3.2",
		"@wxt-dev/module-solid": "^1.1.4",
		"happy-dom": "^20.0.11",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15",
		"wxt": "^0.20.11"
	}
}
